@model List<CategoryViewModel>
@{
    var categories = Model;
}
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                <div class="categories__item categories__large__item set-bg"
                     data-setbg="/ui/img/categories/category-1.jpg">
                    <div class="categories__text">
                        <h1>@categories[0].Name</h1>
                        <p>@categories[0].Description</p>
                        <p>@categories[0].CountOfBooks kitap</p>
                        <a href="#">ALIŞVERİŞ YAP</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    @for (int i = 1; i < categories.Count; i++)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6 p-0">
                            <div class="categories__item set-bg" data-setbg="/ui/img/categories/category-2.jpg">
                                <div class="categories__text">
                                    <h4>@categories[i].Name</h4>
                                    <p>@categories[i].Description</p>
                                    <p>@categories[i].CountOfBooks kitap</p>
                                    <a href="#">ALIŞVERİŞ YAP</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->